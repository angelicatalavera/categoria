<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/electronica"
        />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esta música está completamente generada de manera virtual, siendo desarrollada desde la década de los años 80 en Alemania, apoderándose rápidamente de la escena mundial hasta la actualidad, donde es uno de los géneros predominantes."/>

    <Button
        android:id="@+id/btncinco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU PRINCIPAL"
        android:backgroundTint="@color/colorAccent"
        />

</LinearLayout>