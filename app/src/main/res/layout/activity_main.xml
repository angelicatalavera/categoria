<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/cat1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="ROCK"
            android:textColor="@color/colorUno"
            android:textStyle="bold"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/cat2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="POP"
            android:textColor="@color/colorDos"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/cat3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="REGGAETON"
            android:textColor="@color/colorTres"
            android:textStyle="bold"
            android:textSize="40sp" />

        <Button
            android:id="@+id/cat4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="HIP HOP"
            android:textColor="@color/colorCuatro"
            android:textStyle="bold"
            android:textSize="40sp" />

        <Button
            android:id="@+id/cat5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="ELECTRONICA"
            android:textColor="@color/colorCinco"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/cat6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="SALSA"
            android:textColor="@color/colorUno"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/cat7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="CUMBIA"
            android:textColor="@color/colorDos"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/cat8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="BANDA"
            android:textColor="@color/colorTres"
            android:textStyle="bold"
            android:textSize="40sp" />

        <Button
            android:id="@+id/cat9"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="SAMBA"
            android:textColor="@color/colorCuatro"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/cat10"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="ROCK AND ROLL"
            android:textColor="@color/colorCinco"
            android:textStyle="bold"
            android:textSize="40sp"/>


    </LinearLayout>

    </ScrollView>

</LinearLayout>